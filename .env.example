# إعدادات Google PageSpeed Insights API
PAGESPEED_API_KEY=your_pagespeed_api_key_here

# معلومات اعتماد WordPress (اختياري)
WP_USERNAME=your_wordpress_username
WP_PASSWORD=your_wordpress_password_or_application_password

# إعدادات عامة
DEFAULT_USER_AGENT=RSEO Bot 1.0
DEFAULT_LANGUAGE=ar
